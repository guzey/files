%Some basic mathematical commands

%special letters:
\newcommand{\C}{\mathbb{C}}
\newcommand{\R}{\mathbb{R}}
\newcommand{\Q}{\mathbb{Q}}
\newcommand{\Z}{\mathbb{Z}}
\newcommand{\N}{\mathbb{N}}
\newcommand{\x}[1]{#1^{\times}}
\newcommand{\g}{\mathfrak{g}}
\newcommand{\rr}{\mathfrak{r}}
\newcommand{\h}{\mathfrak{h}}

%parameterized mathematical expressions:
\newcommand{\abs}[1]{\left|#1\right|}
\newcommand{\closedinterval}[2]{\left[ #1 \, , #2 \right]}
\newcommand{\openinterval}[2]{\left(#1 \, , #2 \right)}
\newcommand{\leftclosedinterval}[2]{\left[#1, \, , #2 \right)}
\newcommand{\rightclosedinterval}[2]{\left(#1 \, , #2 \right]}
\newcommand{\oneton}[1]{\left\{ 1,2, \ldots, #1 \right\}}
\newcommand{\zeroton}[1]{\left\{ 0,1, \ldots, n \right\}}
\newcommand{\zo}{\left\{ 0,1 \right\}}
\newcommand{\booleanfunc}[1]{\zo^{#1} \to \zo}
\newcommand{\matrixtwobytwo}[4]{\left(\begin{array}{rr} #1 & #2 \\ #3 & #4 \end{array}\right)}
\newcommand{\matrixthreebythree}[9]{\left(\begin{array}{lll} #1 & #2 & #3 \\ #4 & #5 & #6 \\ #7 & #8 & #9 \end{array}\right)}
\newcommand{\innerproduct}[2]{\left< \ #1 \ , \ #2 \ \right>}
\newcommand{\realpart}[1]{{\sf Re} \; #1}
\newcommand{\imaginarypart}[1]{{\sf Im} \; #1}

