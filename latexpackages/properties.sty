
%Some basic definition/recall commands

\newcommand{\firstuse}[1]{{\bf #1}\tiny(first used)\normalsize}
\newcommand{\firstuseind}[1]{\firstuse{#1}\index{#1}}
\newcommand{\defined}[1]{{\bf #1}\tiny(defined)\normalsize}
\newcommand{\recalled}[1]{{\bf #1}\tiny(recalled)\normalsize}
\newcommand{\explained}[1]{{\bf #1}\tiny(explained)\normalsize}
\newcommand{\definedind}[1]{\defined{#1}\index{#1}}
\newcommand{\recalledind}[1]{\recalled{#1}\index{#1}}
\newcommand{\explainedind}[1]{\explained{#1}\index{#1}}

%Some topic name commands
\newcommand{\topicname}[1]{{\em #1}\tiny(topic name)\normalsize}

%Some property theoretic commands
%new context spaces
\newcommand{\definedcontext}[2]{\defined{#1}\index{#2}}%actual context space name, visible name
\newcommand{\sdefinedcontext}[1]{\definedcontext{#1}{#1}} %actual name and visible name same

%new properties
\newcommand{\definedproperty}[3]{\defined{#1}\index{#3 #2}\index{#2!#3}} %property name, context space and visible text
\newcommand{\sdefinedproperty}[2]{\definedproperty{#2 #1}{#1}{#2}}
\newcommand{\adefinedproperty}[2]{\definedproperty{#2}{#1}{#2}}
\newcommand{\recalledproperty}[3]{\recalled{#1}\index{#3 #2}\index{#2!#3}}
\newcommand{\srecalledproperty}[2]{\recalledproperty{#2 #1}{#1}{#2}}
\newcommand{\arecalledproperty}[2]{\recalledproperty{#2}{#1}{#2}}
%new metaproperties
\newcommand{\definedmetaproperty}[3]{\defined{#1}\index{#2 property!#3}} %metaproperty name, context space and visible text
\newcommand{\sdefinedmetaproperty}[2]{\definedmetaproperty{#2 #1 property}{#1}{#2}}
\newcommand{\adefinedmetaproperty}[2]{\definedmetaproperty{#2}{#1}{#2}}
\newcommand{\recalledmetaproperty}[3]{\defined{#1}\index{#2 property!#3}}
\newcommand{\srecalledmetaproperty}[2]{\recalledmetaproperty{#2 #1 property}{#1}{#2}}
\newcommand{\arecalledmetaproperty}[2]{\recalledmetaproperty{#2}{#1}{#2}}

%Property modifiers
\newcommand{\definedwbpropmodifier}[4]{\sdefinedproperty{#1}{#2}{#4 #3}\index{#3 #2! #4}}
\newcommand{\sdefinedwbpropmodifier}[3]{\sdefinedproperty{#1}{#3 #2}\index{#2 #1! #3}}
\newcommand{\adefinedwbpropmodifier}[3]{\adefinedproperty{#1}{#3 #2}\index{#2 #1! #3}}

%Definitions in tables
\newcommand{\tabledef}[2]{\bf{#1} \index{#1} & #2 \\}

%Some definition layout commands
\newcommand{\contdefnm}[2]{A \sdefinedcontext{#1} is a #2.}
\newcommand{\contdefmn}[2]{A #2 is termed a #1.}
\newcommand{\propdefacpm}[3]{A #1 is said to be \adefinedproperty{#1}{#2} if #3.}
\newcommand{\propdefscpm}[3]{A #1 \ is said to be a \sdefinedproperty{#1}{#2} if #3.}
\newcommand{\propdefascpm}[3]{A #1 \ is said to be a \adefinedproperty{#1}{#2} if #3.}
\newcommand{\propdefspcm}[3]{A \sdefinedproperty{#1}{#2} is a #1 \ such that #3.}
\newcommand{\propdefaspcm}[3]{A \adefinedproperty{#1}{#2} is  #1 \ such that #3.}
\newcommand{\propdefacmp}[3]{A #1 \ such that #3 \ is called \adefinedproperty{#1}{#2}.}
\newcommand{\propdefscmp}[3]{A #1 \ such that #3 \ is called a \sdefinedproperty{#1}{#2}.}
\newcommand{\propdefacpmwe}[4]{A #1 \ #4 is said to be \adefinedproperty{#1}{#2} if #3.}
\newcommand{\propdefscpmwe}[4]{A #1 \ #4 is said to be a \sdefinedproperty{#1}{#2} if #3.}
\newcommand{\propdeftwoacpm}[4]{A #1 is said to be \adefinedproperty{#1}{#2}, or \adefinedproperty{#1}{#3} if #4.}
\newcommand{\propdeftwoscpm}[4]{A #1 \ is said to be a \sdefinedproperty{#1}{#2} or \sdefinedproperty{#1}{#3} if #4.}
\newcommand{\propdeftwoacpmwe}[5]{A #1 \ #4 is said to be \adefinedproperty{#1}{#2}, or \adefinedproperty{#1}{#3} if #5.}
\newcommand{\propdeftwoscpmwe}[5]{A #1 \ #4 is said to be a \sdefinedproperty{#1}{#2} or \sdefinedproperty{#1}{#3} if #5.}
\newcommand{\propdefacpmeq}[4]{A #1 is said to be \adefinedproperty{#1}{#2} if #3, or equivalently, #4}
%Result statements
\newcommand{\resultstated}[1]{{\bf #1} \tiny(result stated)\normalsize\index{#1}}
\newcommand{\resultassumed}[1]{{\bf #1} \tiny(result assumed)\normalsize\index{#1}}
\newcommand{\resultrecalled}[1]{{\bf #1} \tiny(result recalled)\normalsize\index{#1}}
\newcommand{\resulttobedone}[1]{{\bf #1} \tiny(result to be done)\normalsize\index{#1}}
\newcommand{\resultrecalledfrom}[2]{\resultrecalled{#1} (refer Section \ref{#2})} 

%Notation layouts
\newcommand{\letbea}[2]{Let #2 \ be a #1}
\newcommand{\letbeasatisfying}[3]{Let #2 \ be a #1 \ satisfying #3}
\newcommand{\letbethe}[2]{Let #2 \ be the #1}
\newcommand{\denote}[2]{We shall denote #1 \ by #2}

%Statement layouts
\newcommand{\propertyequation}[3]{A #1 \ is #2 \ if and only if it is #3; that is, the properties of being #2 \ and #3 \ are equivalent for objects of type #1}
\newcommand{\propertyequationtheorem}[3]{\begin{theorem}[#2 \ equals #3 for #1]\label{#2equals#3for#1}\propertyequation{#1}{#2}{#3}\end{theorem}}

%Yet more property definitions
\newcommand{\propdefacpconj}[4]{\propdefacpm{#1}{#2}{it is #3 and #4}}
\newcommand{\propdefacpneg}[3]{\propdefacpm{#1}{#2}{it is not #3}}
\newcommand{\propdefacphasa}[3]{\propdefacpm{#1}{#2}{if has a #3}}
