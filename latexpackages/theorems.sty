\usepackage{amsthm}
%Theorem styles
\newtheoremstyle{mystyle}% name
     {24pt}%      Space above
     {24pt}%      Space below
     {\rm}%         Body font
     {\parindent}%         Indent amount (empty = no indent, \parindent = para indent)
     {\bf}% Thm head font
     {.}%        Punctuation after thm head
     {.5em}%     Space after thm head: " " = normal interword space;
           %       \newline = linebreak
     {}%         Thm head spec (can be left empty, meaning `normal')

\newtheoremstyle{smallstyle}% name
     {6pt}%      Space above
     {6pt}%      Space below
     {\small}%         Body font
     {}%         Indent amount (empty = no indent, \parindent = para indent)
     {\bf}% Thm head font
     {.}%        Punctuation after thm head
     {\newline}%     Space after thm head: " " = normal interword space;
           %       \newline = linebreak
     {}%         Thm head spec (can be left empty, meaning `normal')

\newtheoremstyle{itystyle}
     {3pt}%      Space above
     {3pt}%      Space below
     {\em}%         Body font
     {}%         Indent amount (empty = no indent, \parindent = para indent)
     {\bf}% Thm head font
     {}%        Punctuation after thm head
     {\newline}%     Space after thm head: " " = normal interword space;
           %       \newline = linebreak
     {}%         Thm head spec (can be left empty, meaning `normal')

